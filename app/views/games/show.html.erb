<h1><%= @game.title %></h1>
<p><%= @game.description %></p>

<% if not @admin %>
    <%= form_tag("/redirect-to-game", method: "post") do %>
        <%= label_tag(:key, "Insert admin key here") %>
        <%= text_field_tag :key %>
        <%= submit_tag("Submit", class:"btn submit") %>
    <% end %>
<% end %>

<% if @game.admin_email %>
    <p>If you would like to join the game, please contact the admin 
        <a href="mailto:<%=@game.admin_email%>?Subject=Assassins_Game" 
           target="_top">here</a>
    </p>
<% end %>

<% if @leaders and @leaders.count > 0 %>
<div class="leaderboard">
    <h3>Leaderboard</h3>
    <table> 
        <tr>
            <th>Team</th>
            <th>Player</th>
            <th>Kills</th>
        </tr>

        <% @leaders.each do |leader| %>
            <% team_name = Team.find(leader.team_id).name %>
            <div class="<%= team_name %>">
                <tr>
                    <td><%= team_name %></td>
                    <td><%= leader.name %></td>
                    <td><%= leader.kills %></td>
                </tr>
            </div>
        <% end %>
    </table>
</div>
<% end %>

<div class="players">
    <% @teams.each do |team| %>
        <table class="<%= team.name %>">
            <tr>
                <th><%= team.name %></th>
                <th>Total Kills: <%= team.total_kills %></th>
                <th>Total Remaining: <%= team.total_remaining%></th>
            </tr>

            <tr>
                <td>Player</td>
                <td>Alive</td>
                <td>Kills</td>
                <% if @admin %>
                    <td>Target</td>
                    <td>Life</td>
                <% end %>
            </tr>

            <% team.players.each do |person| %>
                <tr>
                    <td><%= person.name %></td>
                    <td><%= person.alive %></td>
                    <td><%= person.kills %></td>
                    <% if @admin %>
                        <% if person.target_id == nil or !person.alive %>
                            <td>---</td>
                        <% else %>
                            <% p = Player.find_by(id: person.target_id) %>
                            <td><%= p.name if p %> <%= '---' if not p %></td>
                        <% end %>
                        <td>
                        <% if person.alive %>
                            <%= (link_to "Killed Target", life_path(
                                id: @game.id, player: person.id, key: @key, 
                                act: "kill"), method: :post) if p and p != person %>
                            <%= link_to "Suicide", life_path(
                                id: @game.id, player: person.id, key: @key, 
                                act: "suicide"), method: :post %>
                        <% else %>
                            <%= link_to "Revive", life_path(
                                id: @game.id, player: person.id, key: @key, 
                                act: "revive"), method: :post %>
                        <% end %>
                    <% end %>
                </tr>
            <% end %>
        </table>
    <% end %>
</div>

<% if @admin %>
    <div class="signup">
        <%= link_to "Signup link", signup_path(@game) %>
    </div>

    <div class="add-players">
        <a id="add-btn" class="btn">Add players</a>
        <div id="add-form">
            <div class="form">
                <%= form_tag("/games/#{@game.id}/add-players", method: "post") do %>
                    <% @game.teams.each do |team| %>
                        <%= label_tag(team.name.to_sym, "Add #{team.name} names separated by a comma") %>
                        <%= text_area_tag team.name.to_sym %>
                    <% end %>
                    <%= hidden_field_tag :key, @key %>
                    <%= submit_tag("Submit", class:"btn submit") %>
                <% end %>
            </div>
        </div>
    </div>

    <div class="assign-targets">
        <%= link_to "Assign targets", assign_targets_path(id: @game.id, key: @key), method: :post, class: "btn", 
            id: "assign-targets-btn" %>
    </div>

    <div class="alert-targets">
        <%= link_to "Send notification", create_alerts_path(id: @game.id, key: @key), class: "btn", 
            id: "assign-targets-btn" %>
    </div>
<% end %>
